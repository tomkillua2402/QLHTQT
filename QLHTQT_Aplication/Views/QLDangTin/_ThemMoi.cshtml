<div class="box box-primary popupStyle">
    <div class="box-header with-border">
        <div class="box-header with-border text-center">
            <h3><strong>THÊM THÔNG TIN BÀI ĐĂNG</strong></h3>
        </div>
        <form action="">
            @*@Html.HiddenFor(x => x.Id)*@
            <div class="box-body box-profile">
                <div class="main">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-12 col-sm-2 col-md-2">
                                <label>Thời gian diễn ra:</label>
                            </div>
                            <div class="col-xs-12 col-sm-4 col-md-4">
                                <input type="datetime" id="Ngay_dien_ra" class="form-control" />
                            </div>
                            <div class="col-xs-12 col-sm-2 col-md-2">
                                <label>Thời gian đăng:</label>
                            </div>
                            <div class="col-xs-12 col-sm-4 col-md-4">
                                <input type="datetime" id="Ngay_dang" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-12 col-sm-2 col-md-2">
                                <label>Số tin bài đăng:</label>
                            </div>
                            <div class="col-xs-12 col-sm-4 col-md-4">
                                <input type="number" name="name" class="form-control" />
                            </div>
                            <div class="col-xs-12 col-sm-2 col-md-2">
                                <label>Bài đăng 1:</label>
                            </div>
                            <div class="col-xs-12 col-sm-4 col-md-4">
                                <input type="file" class="form-control btn-default" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-12 col-sm-2 col-md-2">
                                <label>Bài đăng 2:</label>
                            </div>
                            <div class="col-xs-12 col-sm-4 col-md-4">
                                <input type="file" class="form-control btn-default" />
                            </div>
                            <div class="col-xs-12 col-sm-2 col-md-2">
                                <label>Bài đăng 3:</label>
                            </div>
                            <div class="col-xs-12 col-sm-2 col-md-4">
                                <input type="file" class="form-control btn-default" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-12 col-sm-2 col-md-2">
                                <label>Sự kiện:</label>
                            </div>
                            <div class="col-xs-12 col-sm-4 col-md-4">
                                <select class="form-control select2">
                                    <option value="1">Hội nghị</option>
                                    <option value="2">Hội thảo</option>
                                    <option value="3">Tọa đàm truyền hình</option>
                                    <option value="4">Lễ tốt nghiệp</option>
                                    <option value="5">Lễ khai giảng</option>
                                    <option value="6">Tập huấn</option>
                                    <option value="7">Mít tinh</option>
                                    <option value="8">Gặp mặt</option>
                                    <option value="9">Ký kết hợp tác</option>
                                    <option value="10">Họp báo</option>
                                </select>
                            </div>
                            <div class="col-xs-12 col-sm-2 col-md-2">
                                <label>Đối tác đăng tin:</label>
                            </div>
                            <div class="col-xs-12 col-sm-2 col-md-4">
                                <select class="form-control select2">
                                    <option value="1">AB0101</option>
                                    <option value="2">DTA</option>
                                    <option value="3">DTB</option>
                                    <option value="4">DTC</option>
                                    <option value="5">DTD</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-xs-12 col-sm-2 col-md-2">
                                <label>Số tin bài tiếng Việt:</label>
                            </div>
                            <div class="col-xs-12 col-sm-4 col-md-4">
                                <input type="number" name="name" class="form-control" />
                            </div>
                            <div class="col-xs-12 col-sm-2 col-md-2">
                                <label>Số tin bài tiếng Anh:</label>
                            </div>
                            <div class="col-xs-12 col-sm-4 col-md-4">
                                <input type="number" name="name" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group text-center">
                        <button class="btn-sm btn btn-success" onclick="btnSave_Onclick(event)"><i class="fa fa-save"></i>&nbsp;LƯU</button>&nbsp;&nbsp;
                        <button onclick="CloseModal(event)" class="btn-sm btn btn-danger" style="margin-left:5px"><i class="fa fa-close"></i>&nbsp;ĐÓNG</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<script type="text/javascript">
    $('.select2').select2();
    $('#Ngay_dien_ra').datepicker({
        autoclose: true,
        todayHighlight: true,
        format: 'dd/mm/yyyy'
    });
    $('#Ngay_dang').datepicker({
        autoclose: true,
        todayHighlight: true,
        format: 'dd/mm/yyyy'
    });
    function CloseModal(e) {
        e.preventDefault();
        $("#dynamic-modal-sub").modal("hide");
    }
</script>






